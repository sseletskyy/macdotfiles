[user]
	name = Serge Seletskyy
	email = sseletskyy@gmail.com
[credential]
	helper = osxkeychain
[mergetool "sublime"]
	cmd = subl -w $MERGED
	trustExitCode = false
[merge]
	tool = sublime
[core]
  editor=vim
	autocrlf = input
	excludesfile = /Users/gustotune/.gitignore_global
[alias]
	co = checkout
  cob = checkout -b
  com = checkout master
  cm = commit 
	ci = commit -v
  cim = commit --amend
  wip = !git add . && SKIP=RuboCop git ci -m 'wip'
  st = status
	cat = cat-file
  br = branch
  cp = cherry-pick
  cpc = cherry-pick --continue
  cpa = cherry-pick --abort
  undo = reset HEAD~1
	ffwd = pull --rebase
	changes = diff --name-status -r
  diffstat = diff --stat -r
  di = diff -U8 -w
  dic = diff --cached -U8 -w
  dio = !git diff -U8 -w origin/$(git br)
  dim = diff -w origin/master
  up = !git fetch && git pull --rebase --prune
	upm = pull --rebase origin master
  unfuck = !git reset --hard origin/$(git br)
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  slog = !git log --format='format:%h %cn %s'
  vdf = difftool
  gerrit-review-master = push origin HEAD:refs/for/master%r=email@dot.com
  gerrit-master = push origin HEAD:refs/for/master
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	ui = auto
	status = auto
	showbranch = auto
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[diff]
	tool = vimdiff
[gitsh]
    noGreeting = false
    defaultCommand = status --short --branch && :echo
[gitsh "color"]
    default = cyan
    untracked = yellow
    modified = red
[push]
	default = simple
[rebase]
  instructionFormat = (%an) %s
[branch]
  autosetupmerge  = always
  autosetuprebase = always
